<%- include("../partials/header") %>
<div class="container">

    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item active">
                    Details
                </li>
                <li class="list-group-item">
                    Region
                </li>
                <li class="list-group-item">
                    Rules
                </li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="card-body">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h3> <a><%= campground.name %> </a> </h3>
                    <p><%= campground.description %></p>
                    <p> Submitted by: <%= campground.author.username %> </p>
                </div>

                <!--<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a href = "/campgrounds/<%=campground._id%>/edit" class = "btn btn-default">Edit</a>
                <form action = "/campgrounds/<%=campground._id%>?_method=DELETE" method = "POST">
                    <button class = "btn btn-danger">Delete</button>
                </form>
                <% } %>-->

                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <div class="d-grid gap-2 editAndDeleteButtons">
                        <a href = "/campgrounds/<%=campground._id%>/edit" class = "btn btn-warning">Edit</a>
                    </div>

                    <form action = "/campgrounds/<%=campground._id%>?_method=DELETE" method = "POST">
                        <div class="d-grid gap-2 editAndDeleteButtons">
                            <button class = "btn btn-danger">Delete</button>
                        </div>
                    </form>
                <% } %>
            </div>
            
            <div class="well">
                <div class="text-right">
                    <div class="d-grid gap-2">
                        <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-outline-primary addCommentButton">Add Comment</a>
                    </div>
                    
                </div>
                <hr>
                <% for(var i = 0; i < campground.comments.length; i++){ %>
                <div class = "row">
                    <div class = "col-md-12">
                        <strong><%= campground.comments[i].author.username %></strong>
                        <span class = "pull-right">10 days ago</span>
                        <p><%= campground.comments[i].text %></p>
                    </div>
                </div>
                <% } %>
                

            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
</div>