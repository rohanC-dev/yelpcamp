<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>YelpCamp</h1>
            <p>Welcome to YelpCamp</p>
            <a href="/campgrounds/new" class="btn btn-info">Add New Campground</a>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">

        <% for(var i = 0; i < campgrounds.length; i++){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="thumbnail">
                <div id  = "campgroundTitle" class="caption">
                    <h4> <%= campgrounds[i].name %> </h4>
                </div>
                <img src="<%= campgrounds[i].image %>" />
                <div id  = "moreInfoContainer" class = "container">
                    <a id="moreInfo" href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-success">More Info</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<%- include("../partials/footer") %>